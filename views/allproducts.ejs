<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>All Products</h1>

    <% product.forEach((product, index) => { %>
    <i><%= index+1 %></i>
    <div>
      <label for="">Product Name: <%= product.product_name %></label>
    </div>
    <div>
      <label for="">Product Price: <%= product.product_price %></label>
    </div>
    <div>
      <label for="">Product Quantity: <%= product.product_quantity %></label>
    </div>
    <div>
      <label for="">Date: <%= product.product_date %></label>
    </div>

    <form action="/edit-product/<%= product._id %>" method="get">
      <button type="submit">Edit</button>
    </form>

    <form
      action="/delete-product/<%= product._id %>"
      method="post"
      onsubmit="return confirm('Are you sure you want to delete?')"
    >
      <button type="submit">Delete</button>
    </form>

    <hr>

    <% }) %>
  </body>
</html>
